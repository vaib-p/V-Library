<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8DEDE"
    tools:context=".myaccount.MyLibraryInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:popupTheme="@style/Widget.AppCompat.Toolbar" />
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/MLLogo"
        android:elevation="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <LinearLayout
        android:layout_width="0dp"
        android:elevation="16dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MLLogo">

        <TextView
            android:id="@+id/MLID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splashbackground"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/MLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splashbackground"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/MLEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splashbackground"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/MLMoNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splashbackground"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>